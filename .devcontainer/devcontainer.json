{
    "name": "python:3.12-bookworm",
    "image": "mcr.microsoft.com/devcontainers/python:3.12-bookworm",
    "features": {
        "ghcr.io/devcontainers-contrib/features/poetry:2": {}
        //"ghcr.io/hspaans/devcontainer-features/pytest:1": {}
    },
    "containerEnv": {
        "PYTHONDONTWRITEBYTECODE": "1" // for pytest no cache
    },
    "updateContentCommand": {
        "for_poetry_setting": "poetry config virtualenvs.in-project true"
    },
    /*
    "postCreateCommand": {
        "pj_setting": "cd sample-reflex && poetry install --no-root && poetry shell &"
    },
    */
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "njpwerner.autodocstring",
                "Gruntfuggly.todo-tree",
                "shardulm94.trailing-spaces",
                "charliermarsh.ruff"
            ]
        }
    },
    "postCreateCommand": "bash .devcontainer/postCreateCommand.bash",
    "remoteUser": "vscode"
}